          {registrations.map(registration => (
            <tr>
              <th title={"Inscrit le " + formatDate(registration.date)}>{registration.name}</th>
              <td>
                {registration.hardware.pc && "ğŸ–¥ï¸"}
                {registration.hardware.laptop && "ğŸ’»"}
                {registration.hardware.console && "ğŸ®"}
              </td>
              {registration.days.map(day => (
                <td class={day ? "yes" : null}>{day && "âœ”ï¸"}</td>
              ))}
            </tr>
          ))}
        </table>

        <div class="stats">
          <span>Joueurs inscrits</span>
          <span>ğŸ‘¥ {stats.registrationsCount.all}</span>
          <span>ğŸ–¥ï¸ {stats.registrationsCount.desktop}</span>
          <span>Moyenne par jour</span>
          <span>ğŸ‘¥ {stats.dailyAverage.all}</span>
