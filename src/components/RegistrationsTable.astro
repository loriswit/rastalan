    height: 1.5rem;
    border-top: 1px solid #fff5;
    border-bottom: 1px solid #fff5;
  }

  .confirmation {
    font-size: 1.2em;
    animation: appear 1s cubic-bezier(0.59, 0.33, 0.16, 1.27);
  }

  @keyframes appear {
    from {
      opacity: 0;
      transform: scale(0.2);
    }

    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  .stats {
    font-size: 0.9em;
    display: grid;
    grid-template-columns: auto auto auto;
    gap: 0.5em 1em;
    align-items: baseline;
    margin: 1em 0;
  }
</style>
